{
  "description": "Auto-detect sandbox-blocked domains from proxy timeout output and add to allowedDomains",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/sandbox_domain_allowlist.py"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/sandbox_domain_allowlist.py"
          }
        ]
      }
    ]
  }
}
